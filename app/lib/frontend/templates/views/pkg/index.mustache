<div class="search-controls{{#has_active_advanced}} -active{{/has_active_advanced}}">
  <div class="container">
    <div class="search-controls-primary">
      <div class="search-controls-sdk search-controls-tabs">
        {{& sdk_tabs_html}}
      </div>
      <div class="search-controls-sdk search-controls-buttons">
        <span class="search-controls-label">SDK</span>
        {{& sdk_tabs_html}}
      </div>
      <div class="search-filters-btn search-filters-btn-wrapper search-controls-more" data-ga-click-event="toggle-advanced-search">
        Advanced
        <img src="{{& static_assets.img__carot-up_svg}}" class="search-controls-more-carot" />
      </div>
    </div>
  </div>
  {{#has_subsdk_options}}
  <div class="search-controls-subsdk">
    <div class="container">
      <span class="search-controls-label">{{subsdk_label}}</span>
      <div class="search-controls-buttons">
        {{& subsdk_filter_buttons_html }}
      </div>
    </div>
  </div>
  {{/has_subsdk_options}}
  <div class="search-controls-advanced">
    <div class="container">
      <div class="search-controls-advanced-block">
        <div class="search-controls-checkbox">
          <input id="-search-unlisted-checkbox" type="checkbox" name="unlisted" {{#include_unlisted}} checked="checked"{{/include_unlisted}} />
          <label for="-search-unlisted-checkbox">Include unlisted packages</label>
        </div>
        <div class="search-controls-checkbox">
          <input id="-search-discontinued-checkbox" type="checkbox" name="discontinued" {{#include_discontinued}} checked="checked"{{/include_discontinued}} />
          <label for="-search-discontinued-checkbox">Include discontinued packages</label>
        </div>
        <div class="search-controls-checkbox">
          <input id="-search-null-safe-checkbox" type="checkbox" name="null-safe" {{#null_safe}} checked="checked"{{/null_safe}} />
          <label for="-search-null-safe-checkbox">Supports null safety</label>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  {{& listing_info_html }}

  {{& package_list_html}}

  {{#has_packages}}
    {{{pagination}}}
  {{/has_packages}}
  {{#is_search}}
    <p>Check our help page for <a href="/help/search">advanced search expressions</a>.</p>
  {{/is_search}}
</div>
